<%= simple_form_for reminder, url: space_reminder_path(space, reminder), html: {class: 'form-horizontal'} do |f| %>
  <%= render 'form', f: f %>
  <div class="form-actions">
    <%= f.button :submit, value: 'Change Reminder', class: 'btn-primary' %>
    <%= f.button :submit, value: 'Preview' %>
  </div>
<% end %>
